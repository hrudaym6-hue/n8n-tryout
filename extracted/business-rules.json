        "isConfigurable": false,
        "relatedDomainConcepts": ["Card Expiration", "Date Validation"]
      },
      {
        "description": "Calculate days until card expiration",
        "type": "calculation",
        "condition": "Card not expired",
        "outcome": "COMPUTE WS-DAYS-TO-EXPIRY = (CARD-EXPIRAION-DATE - WS-CURRENT-DATE) / 1",
        "location": {"function": "3000-CHECK-CARD-EXPIRY", "line": 290},
        "variablesInvolved": ["CARD-EXPIRAION-DATE", "WS-CURRENT-DATE", "WS-DAYS-TO-EXPIRY"],
        "isConfigurable": false,
        "relatedDomainConcepts": ["Card Expiration", "Date Calculation"]
      },
      {
        "description": "Set expiration warning flag if card expires within configured days threshold",
        "type": "validation",
        "condition": "WS-DAYS-TO-EXPIRY <= P-EXPIRY-DAYS",
        "outcome": "SET CARD-EXPIRING-SOON TO TRUE",
        "location": {"function": "3000-CHECK-CARD-EXPIRY", "line": 293},
        "variablesInvolved": ["WS-DAYS-TO-EXPIRY", "P-EXPIRY-DAYS", "CARD-EXPIRING-SOON"],
